<div class="container">

<h2>Upcoming Events
<% if user_signed_in? %>
  <%= link_to ('<span class="glyphicon glyphicon-plus-sign"></span>').html_safe, new_event_path %>
  <% end %>
</h2>

<div class="row">
  <div class="col-lg-4 col-md-6">
    <div class="panel">
      <div class="panel-heading green">
        <h3 class="panel-title">Classes</h3>
      </div>
      <div class="panel-body">
        Panel content: <% @events.each do |e| %>
                        <%= e.name %>
                        <% end %>
      </div>
    </div>
  </div><!-- /.col-lg-4 col-md-6 -->

  <div class="col-lg-4 col-md-6">
   <div class="panel">
     <div class="panel-heading blue">
       <h3 class="panel-title">Performances</h3>
     </div>
     <div class="panel-body">
       Panel content
     </div>
   </div>
  </div><!-- /.col-lg-4 col-md-6 -->

  <div class="col-lg-4 col-md-6">
    <div class="panel">
      <div class="panel-heading purple">
        <h3 class="panel-title">Community Events</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div><!-- /.col-lg-4 col-md-6 -->
</div>
</div>