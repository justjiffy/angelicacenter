<%= form_for(@donor) do |f| %>
  <% if @donor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donor.errors.count, "error") %> prohibited this donor from being saved:</h2>

      <ul>
      <% @donor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="padding: 0 25px 50px 25px;">
  <div class="form-group row">
    <%= f.label :name, "Name: ", class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :img, "Logo/Image URL (http://...): ", class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :img, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :major, "Over $5,000?", class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :major, class: "checkbox" %>
    </div>
  </div>
  <div class="form-grou row actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add Donor", class: "btn btn-md btn-success" %>
      <%= link_to ('<button class="btn btn-md btn-danger">CANCEL</button>').html_safe, donors_path %>
    </div>
  </div>
</div>
<% end %>
