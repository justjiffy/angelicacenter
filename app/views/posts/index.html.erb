<div class="jumbotron">
  <h1>All News Post</h1>
</div>
<p id="notice"><%= notice %></p>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if user_signed_in? %>
        <th>Edit</th>
        <th>DELETE</th>
      <% end %>
    </tr>
    <tr>
      <td colspan="2">
      <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path %>
      <% end %>
      </td>
      <td colspan="2">
        <%= link_to ('<span class="glyphicon glyphicon-plus-sign"></span>').html_safe, new_post_path %>
      </td>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td id="modalLink"><%= link_to post.title, "#myModal", "data-id" => post.id, "data-toggle" => "modal", "data-target" => "#myModal" %></td>
        <td><%= post.body %></td>
       <% if user_signed_in? %>
        <td><%= link_to ('<span class="glyphicon glyphicon-pencil"></span>').html_safe, edit_post_path(post) %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-trash"></span>').html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div id="populate" class="modal-dialog">

  </div>
</div>


