<div class="jumbotron">
  <h1>All News Post</h1>
</div>
<p id="notice"><%= notice %></p>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if user_signed_in? %>
        <th>Edit</th>
        <th>DELETE</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
       <% if user_signed_in? %>
        <td><%= link_to ('<span class="glyphicon glyphicon-pencil"></span>').html_safe, edit_post_path(post) %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-trash"></span>').html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>